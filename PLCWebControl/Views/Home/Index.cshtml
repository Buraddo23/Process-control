@section scripts {
    <script type="text/javascript">
    $(document).ready(function () {
        getStare();
        function getStare() {
            $.ajax({                           // face apel de la client(browser) la server de tipul get
                type: 'GET',
                url: '/Home/Stare',
                contentType: 'aplication/json; charset=utf-8',
                dataType: 'json',
                success: function (response) {
                    document.getElementById("level").value = response.waterLevel;
                    document.getElementById("inflow-value").innerHTML = "Inflow: " + response.waterLevel;
                    //$(".buton-stare").addClass("pornire");
                    //$(".valva").addClass("deschidere");
                    setTimeout(function () {
                        getStare();
                    }, 1000);
                },
                failure: function (response) {
                    debugger;
                }
            });
        }

        function postStare(stare) {
            $.ajax({
                type: 'POST',
                url: '/Home/UpdateStare',
                contentType: 'application/json; charset=utf-8',
                dataType: 'json',
                data: JSON.stringify(stare),
                success: function (response) {
                    //    debugger;

                },
                failure: function (response) {
                    debugger;
                }
            });

        }

        $("#umplere").click(function () {
            if (activat == true) {
                postStare({
                    umplut: true,
                    Deschis: false,
                    Activat: true,
                    Pornit: true
                });

            }

        });

        $("#golire").click(function () {
            if (activat == true) {
                postStare({
                    umplut: false,
                    Deschis: true,
                    Activat: true,
                    Pornit: true
                });

            }

        });

        $('#buton-activare').change(function () {
            if ($(this).is(":checked")) {
                postStare({
                    umplut: umplut,
                    Deschis: deschis,
                    Activat: true,
                    Pornit: pornit
                });

            }
            else
                postStare({
                    umplut: umplut,
                    Deschis: deschis,
                    Activat: false,
                    Pornit: pornit
                });
        });
    });</script>
