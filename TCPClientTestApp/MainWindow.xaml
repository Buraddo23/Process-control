<Window x:Class="TCPClientTestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPClientTestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		
		<Button x:Name="btnListen" Grid.Row="0" Grid.Column="1" Content="Start Listening" VerticalAlignment="Center" HorizontalAlignment="Left" Width="150" Height="28" Click="btnListen_Click"/>
		<TextBox x:Name="txtMessageToSend" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200" Height="28" Margin="0,0,10,0"/>
		<Button x:Name="btnSend" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Center" Height="28" Width="100" Content="Send" Click="btnSend_Click"/>

		<TextBlock x:Name="tbDataReceived" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Background="LightGray"/>
	</Grid>
</Window>
